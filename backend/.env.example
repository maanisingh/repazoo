# ============================================================================
# Repazoo Backend Environment Configuration
# Copy to /root/.repazoo-vault/.env and fill in actual values
# ============================================================================

# ============================================================================
# Environment Configuration
# ============================================================================
# Environment: local, cfy (dev), ntf (staging), ai (production)
REPAZOO_ENV=local
DEBUG=true
LOG_LEVEL=INFO

# ============================================================================
# Database Configuration (Supabase)
# ============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# ============================================================================
# Authentication Configuration
# ============================================================================
JWT_SECRET_KEY=change-me-in-production-use-long-random-string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# Twitter OAuth 2.0 Configuration
# ============================================================================
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret

# ============================================================================
# Stripe Configuration
# ============================================================================
# Test mode keys (for development)
STRIPE_SECRET_KEY=sk_test_51xxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_51xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# Stripe Price IDs (create in Stripe Dashboard)
STRIPE_BASIC_PRICE_ID=price_basic_monthly
STRIPE_PRO_PRICE_ID=price_pro_monthly

# ============================================================================
# Anthropic AI Configuration
# ============================================================================
ANTHROPIC_API_KEY=sk-ant-api03-xxxxx
ANTHROPIC_HAIKU_MODEL=claude-3-haiku-20240307
ANTHROPIC_SONNET_MODEL=claude-3-5-sonnet-20241022

# ============================================================================
# Rate Limiting Configuration
# ============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
BASIC_TIER_MONTHLY_QUOTA=1000
PRO_TIER_MONTHLY_QUOTA=10000

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ORIGINS=https://dash.repazoo.com,https://api.repazoo.com,http://localhost:3000

# ============================================================================
# Security Configuration
# ============================================================================
# Encryption key for sensitive data (32-byte random key)
ENCRYPTION_KEY=your-32-byte-encryption-key-change-in-production

# ============================================================================
# Monitoring (Optional)
# ============================================================================
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# ============================================================================
# Worker Configuration (Optional - for Celery)
# ============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Production workers
WORKERS=4
